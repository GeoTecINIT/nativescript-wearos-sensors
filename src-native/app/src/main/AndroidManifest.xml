<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uji.geotec.wearos_sensors">

    <application>
        <service android:name=".messaging.AccelerometerResultMessageService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/accelerometer/ready"
                    android:scheme="wear" />
                <data
                    android:host="*"
                    android:pathPrefix="/accelerometer/prepare"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <service android:name=".messaging.AccelerometerRecordsMessagingService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/accelerometer/new-record"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <service android:name=".messaging.GyroscopeResultMessageService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/gyroscope/ready"
                    android:scheme="wear" />
                <data
                    android:host="*"
                    android:pathPrefix="/gyroscope/prepare"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <service android:name=".messaging.GyroscopeRecordsMessagingService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/gyroscope/new-record"
                    android:scheme="wear" />
            </intent-filter>
        </service>
    </application>

</manifest>